<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/white">
    <Button
            tools:text="Enable rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_rotation"
            app:layout_constraintTop_toTopOf="@+id/rotation_label"
            app:layout_constraintBottom_toBottomOf="@+id/rotation_label"
            app:layout_constraintStart_toEndOf="@+id/rotation_label"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.897"
            android:elevation="5dp"
            android:paddingHorizontal="8dp"/>
    <TextView
            android:id="@+id/rotation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Rotation: "
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/model_label"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_url"
            android:text="Url"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/button_tucurinca"
            app:layout_constraintHorizontal_bias="0.0"
            android:elevation="5dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_tucurinca"
            app:layout_constraintStart_toStartOf="@+id/button_tucurinca"
            android:layout_marginTop="24dp"/>

    <Button
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_painting"
            android:text="Painting"
            app:layout_constraintTop_toTopOf="@+id/button_sofa"
            app:layout_constraintBottom_toBottomOf="@+id/button_sofa"
            app:layout_constraintStart_toEndOf="@+id/button_sofa"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:elevation="5dp"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="8dp"/>
    <Button
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sofa"
            android:text="Sofa"
            app:layout_constraintStart_toEndOf="@+id/button_tucurinca"
            app:layout_constraintTop_toTopOf="@+id/button_tucurinca"
            app:layout_constraintBottom_toBottomOf="@+id/button_tucurinca"
            app:layout_constraintVertical_bias="0.0"
            android:elevation="5dp"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_tucurinca"
            android:layout_marginTop="24dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Tucurinca"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:elevation="5dp"
            android:paddingHorizontal="8dp"/>
    <TextView
            android:id="@+id/model_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Model selected:"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_url"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/model_selected"
            tools:text="Bear"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/model_label"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/model_label"
            app:layout_constraintBottom_toBottomOf="@+id/model_label"
            app:layout_constraintHorizontal_bias="0.14"
            android:textSize="18sp"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/plane_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Plane: "
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rotation_label"
            app:layout_constraintStart_toStartOf="@+id/rotation_label"/>
    <TextView
            android:id="@+id/url_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Url: "
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@+id/plane_label"
            app:layout_constraintStart_toStartOf="@+id/rotation_label"
            android:layout_marginTop="24dp"
            android:visibility="gone"/>
    <EditText
            android:id="@+id/et_url"
            android:visibility="gone"
            android:maxLines="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/button_plane"
            app:layout_constraintStart_toEndOf="@+id/url_label"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/url_label"
            app:layout_constraintTop_toTopOf="@+id/url_label"/>
    <Button
            tools:text="Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_plane"
            android:elevation="5dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@+id/plane_label"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/plane_label"
            app:layout_constraintStart_toEndOf="@+id/plane_label"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintVertical_bias="0.437"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Launch AR"
            android:id="@+id/open_ar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintVertical_bias="0.982"
            android:background="@color/colorPrimary"
            android:elevation="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>